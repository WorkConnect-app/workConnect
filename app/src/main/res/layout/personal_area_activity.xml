<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- buttons network -->

    <TextView
        android:id="@+id/hello_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:text="hello @user name!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/buttons_grid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/hello_user_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- button 1 -->
        <Button
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:layout_columnWeight="1"
            android:layout_margin="12dp"
            android:text="VIDEO CALL"
            android:backgroundTint="@color/blue"
            android:textColor="@android:color/white" />

        <!-- button 2 -->
        <Button
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:layout_columnWeight="1"
            android:layout_margin="12dp"
            android:text="CHATS"
            android:backgroundTint="@color/blue"
            android:textColor="@android:color/white" />

        <!-- button 3 -->
        <Button
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:layout_columnWeight="1"
            android:layout_margin="12dp"
            android:text="VACATION REQUEST"
            android:backgroundTint="@color/blue"
            android:textColor="@android:color/white" />

        <!-- button 4 -->
        <Button
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:layout_columnWeight="1"
            android:layout_margin="12dp"
            android:text="ATTENDANCE REPORT"
            android:backgroundTint="@color/blue"
            android:textColor="@android:color/white" />

        <!-- button 5 -->
        <Button
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:layout_columnWeight="1"
            android:layout_margin="12dp"
            android:text="SUBMITTING SHIFTS"
            android:backgroundTint="@color/blue"
            android:textColor="@android:color/white" />

        <!-- button 6 -->
        <Button
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:layout_columnWeight="1"
            android:layout_margin="12dp"
            android:text="TASKS MANAGER"
            android:backgroundTint="@color/blue"
            android:textColor="@android:color/white" />

    </GridLayout>

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:srcCompat="@drawable/chatgpt_image_nov_24__2025__04_33_59_pm"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="80dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chatgpt_image_nov_24__2025__05_13_06_pm" />

</androidx.constraintlayout.widget.ConstraintLayout>
